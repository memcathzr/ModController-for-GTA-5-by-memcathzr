<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>ModController_for_GTA_5_by_memcathzr</RootNamespace>

    <!-- Derleme çıktısı bu klasöre gitsin -->
    <OutputPath>ModControllerDatas\</OutputPath>

    <!-- Sadece EXE üretilsin, sistemde .NET kurulu olmalı -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    
    <!-- Konsol uygulaması olduğunu belirtelim -->
    <UseWindowsForms>false</UseWindowsForms>
  </PropertyGroup>

</Project>
